@model IEnumerable<GroupProjectASP.Models.Item>

@{
    ViewData["Title"] = "AddtoCart";
}

<h1>Shopping Cart</h1>

<div class="container px-4 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-5">
            <h4 class="heading">Shopping Cart</h4>
        </div>
        <div class="col-7">
            <div class="row text-right">
                <div class="col-4">
                    <h6 class="mt-2">Name</h6>
                </div>
                <div class="col-4">
                    <h6 class="mt-2">Price</h6>
                </div>

            </div>
        </div>
    </div>
    </div>
    @foreach (var item in Model)
    {
        //need touch up on image display css
        <div class="row d-flex justify-content-center border-top">
            <div class="col-5">
                <div class="row d-flex" >
                    <div class="cart">
                        <img src="@("~/Images/" + item.ImageUpload)" asp-append-version="true" class="cart-img" alt=@item.Title  width="100" height="150">
                    </div>
                </div>
            </div>
            <div class="my-auto col-7">
                <div class="row text-right">
                    <div class="col-4">
                        <p class="mob-text">@item.Title</p>
                    </div>
                    <div class="col-4">
                        <div class="row d-flex justify-content-end px-3">
                            <p class="mb-0" id="cnt1">$@item.Price</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        //needs remove from cart button
        //need checkout button
        //needs continue shoping button
    }


















    

@model IEnumerable<GroupProjectASP.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<h1 style="width: 200px; float: left">Items List</h1>

<p style="float: right; margin-right: 0;">
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUpload)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.DateOfCreation.ToString("MM-dd-yyyy")
            </td>
            <td>
                @item.Price.ToString("c2")
            </td>
            <td>
                <img src="@("~/Images/" + item.ImageUpload)" asp-append-version="true" width="100" height="100" />
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ItemID">Edit</a> |
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.ItemID">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ItemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
